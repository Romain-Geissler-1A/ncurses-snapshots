# Makefile for ncurses tests.

SHELL		= /bin/sh

srcdir		= @srcdir@
VPATH		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
libdir		= $(exec_prefix)/lib
includedir	= @includedir@

CC		= @CC@
CFLAGS		= @CFLAGS@
CPPFLAGS	= @INCLUDES@ -DHAVE_CONFIG_H

CCFLAGS		= $(CFLAGS) $(CPPFLAGS)

LIB_DEPS	= \
		../lib/libform@DFT_DEP_SUFFIX@ \
		../lib/libmenu@DFT_DEP_SUFFIX@ \
		../lib/libpanel@DFT_DEP_SUFFIX@ \
		../lib/libncurses@DFT_DEP_SUFFIX@

LINK		= $(CC)
LDFLAGS		= @LD_MODEL@ $(LIB_DEPS) @LDFLAGS@ @LIBS@ @LOCAL_LDFLAGS@

TESTS = \
	blue \
	bs \
	firework \
	gdc \
	hanoi \
	knight \
	ncurses \
	newdemo \
	rain \
	tclock \
	testcurs \
	view \
	worm \
	xmas 

.c.o:
	$(CC) -c $(CCFLAGS) $<

all: $(TESTS) 

blue: $(srcdir)/blue.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
bs: $(srcdir)/bs.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
firework: $(srcdir)/firework.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
gdc: $(srcdir)/gdc.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
hanoi: $(srcdir)/hanoi.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
knight: $(srcdir)/knight.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
ncurses: $(srcdir)/ncurses.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
newdemo: $(srcdir)/newdemo.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
rain: $(srcdir)/rain.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
tclock: $(srcdir)/tclock.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -lm -o $@
testcurs: $(srcdir)/testcurs.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
view: $(srcdir)/view.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
worm: $(srcdir)/worm.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@
xmas: $(srcdir)/xmas.c
	@ECHO_LINK@ $(LINK) $(CCFLAGS) $(srcdir)/$@.c $(LDFLAGS) -o $@

install:

clean:
	-rm -rf *.o trace screendump t $(TESTS)

distclean: clean
	-rm -f Makefile

mostlyclean: clean

realclean: distclean
