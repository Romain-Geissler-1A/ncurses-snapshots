srcdir=../ada_include
objdir=../ada_objects

CC           = gcc
CFLAGS       = -I../../include
LD_FLAGS     = @LD_MODEL@ $(LOCAL_LIBS) @LDFLAGS@ @LIBS@ @LOCAL_LDFLAGS2@ $(LDFLAGS)

ADA          = @nc_ada_compiler@
ADAFLAGS     = @ADAFLAGS@

ADAMAKE      = @nc_ada_make@
ADAMAKEFLAGS = -aI$(srcdir) -aO$(objdir)

ALIB         = @nc_ada_package@
ABASE        = $(ALIB)-curses

CARGS        =-cargs $(ADAFLAGS)
LARGS        =-largs -L../../lib $(LD_FLAGS)

PROGS        = tour

all :: 
	for p in $(PROGS) ; do \
	   $(ADAMAKE) $(ADAMAKEFLAGS) $$p $(CARGS) $(LARGS) ;\
        done

clean ::
	rm -f *.o *.ali b_t*.* *.s $(PROGS) a.out core b_*_test.c *.xr[bs]

distclean :: clean
	rm -f Makefile

mostlyclean :: clean
	@

realclean :: distclean
	@

