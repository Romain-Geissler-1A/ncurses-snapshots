#  Simple makefile for NCursesPanel demo
#
#  NOTE:  This demo requires the panels library. 

SHELL		= /bin/sh

srcdir		= @srcdir@
VPATH		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
libdir		= $(exec_prefix)/lib
includedir	= @includedir@

CC		= @CXX@
CFLAGS		= @CXXFLAGS@

CPPFLAGS	= @INCLUDES@ -DHAVE_CONFIG_H

CCFLAGS		= $(CPPFLAGS) $(CFLAGS)

LINK		= $(CC)
LDFLAGS		= @LDFLAGS@ @LD_MODEL@ @LIBS@ @LOCAL_LDFLAGS@

.SUFFIXES: .cc
.cc.o:
	@echo compiling $@
	@$(CC) -c $(CCFLAGS) -o $*.o $(srcdir)/$*.cc

all: demo

DEPS_DEMO = cursesw.o \
	cursesp.o \
	demo.o \
	../lib/libpanel@DFT_DEP_SUFFIX@ \
	../lib/libncurses@DFT_DEP_SUFFIX@
demo: $(DEPS_DEMO)
	@ECHO_LINK@ $(LINK) -o $@ $(DEPS_DEMO) $(LDFLAGS) -lg++ -lm

cursesp.o: $(srcdir)/cursesp.cc
cursesw.o: $(srcdir)/cursesw.cc
demo.o:    $(srcdir)/demo.cc

install:

clean:
	-rm -f *.o demo

distclean: clean
	-rm -f Makefile

mostlyclean: clean

realclean: distclean
