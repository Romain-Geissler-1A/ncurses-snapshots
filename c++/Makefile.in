#  Simple makefile for NCursesPanel demo
#
#  NOTE:  This demo requires the panels library. 

# turn off _all_ suffix rules; we'll generate our own
.SUFFIXES:

SHELL		= /bin/sh

MODEL		= ../@DFT_OBJ_SUBDIR@
srcdir		= @srcdir@
VPATH		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
libdir		= $(exec_prefix)/lib
includedir	= @includedir@

CC		= @CXX@
CFLAGS		= @CXXFLAGS@

INCDIR		= ../include
CPPFLAGS	= @INCLUDES@ -I$(INCDIR) -DHAVE_CONFIG_H

CCFLAGS		= $(CPPFLAGS) $(CFLAGS)

CFLAGS_NORMAL	= $(CCFLAGS)
CFLAGS_DEBUG	= $(CCFLAGS) -g -DTRACE
CFLAGS_PROFILE	= $(CCFLAGS) -pg
CFLAGS_SHARED	= $(CCFLAGS) @CC_SHARED_OPTS@

CFLAGS_DEFAULT	= $(CFLAGS_@DFT_UPR_MODEL@)

LINK		= $(CC)
LDFLAGS		= @LDFLAGS@ @LD_MODEL@ @LIBS@ @LOCAL_LDFLAGS@

all: demo

DEPS_DEMO = \
	$(MODEL)/cursesw.o \
	$(MODEL)/cursesp.o \
	$(MODEL)/demo.o \
	../lib/libpanel@DFT_DEP_SUFFIX@ \
	../lib/libncurses@DFT_DEP_SUFFIX@
demo: $(DEPS_DEMO)
	@ECHO_LINK@ $(LINK) -o $@ $(DEPS_DEMO) $(LDFLAGS) -lg++ -lm

install:
install.libs:

clean ::
	-rm -f demo

distclean: clean
	-rm -f Makefile

mostlyclean: clean

realclean: distclean

